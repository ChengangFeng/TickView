<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.chengang.tickview.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <com.github.chengang.library.TickView
            android:id="@+id/tick_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:clickable="false"
            app:rate="normal" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <com.github.chengang.library.TickView
            android:id="@+id/tick_view_accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:check_base_color="@color/colorAccent"
            app:rate="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="选中" />

        <Button
            android:id="@+id/uncheck_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消" />

    </LinearLayout>

</RelativeLayout>
